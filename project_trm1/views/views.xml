<odoo>
  <data>
    <record id="project_trm1.project_manager_tree" model="ir.ui.view">
      <field name="name">project_trm1.project_manager.tree</field>
      <field name="model">project_trm1.project_manager</field>
      <field name="arch" type="xml">
        <tree>
          <field name="company" />
          <field name="project" />
          <field name="user" />
        </tree>
      </field>
    </record>

    <record id="project_trm1.project_manager_form" model="ir.ui.view">
      <field name="name">project_trm1.project_manager.form</field>
      <field name="model">project_trm1.project_manager</field>
      <field name="arch" type="xml">
        <form string="">
          <sheet>
            <group colspan="2" col="2">
              <field name="company"></field>
              <field name="project"></field>
              <field name="user"></field>
            </group>
          </sheet>
        </form>
      </field>
    </record>

    <record id="project_trm1.project_manager_action_window" model="ir.actions.act_window">
      <field name="name">project_trm1.project_manager.action.window</field>
      <field name="res_model">project_trm1.project_manager</field>
      <field name="view_mode">tree,form</field>
    </record>


    <menuitem id="project_trm1.menu_root" name="Project manager" />
  
    <menuitem id="project_trm1.project_manager_menu" name="Project manager" parent="project_trm1.menu_root"/>

    <menuitem
      id="project_trm1.project_manager_menu_project"
      name="project_manager"
      action="project_trm1.project_manager_action_window"
      parent="project_trm1.project_manager_menu"/>

  </data>
</odoo>